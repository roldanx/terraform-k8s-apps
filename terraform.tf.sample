terraform {

  backend "local" {
  }

  required_providers {
    kubernetes = {
      source = "hashicorp/kubernetes"
    }
    random = {
      source  = "hashicorp/random"
      version = "3.5.1"
    }
  }

  provider "kubernetes" {
    config_path = "~/.kube/config"
#   config_context = "kind-kind"
  }
}